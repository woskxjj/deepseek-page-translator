{
  "manifest_version": 3,
  "name": "DeepSeek High-Perf Translator",
  "version": "1.0.0",
  "description": "高性能网页翻译插件，支持 SPA 和动态内容。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}